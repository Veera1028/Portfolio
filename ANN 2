  w.append((sum(x[i],y[i])))
for theta in range(0,3):
  model_output=[]
  print("Iteration with theta = ", theta)
  #Calculate predicted output
  for i in range (len(x)):
    model_output.append(z(w[i],theta))
    #Calculate Accuracy
  accuracy=acc(model_output,output)
  print("Accuracy of the model is: ",accuracy)
  print("Predicted Output: ",model_output)
  print("Actual Output: ", output)
  print("-----------------------")
  print("\n")

  #Create list of all accuracy values
